{
  "name": "proofshow-check",
  "productName": "ProofShow Check",
  "version": "1.0.73011",
  "description": "Check ProofShow Return Receipt",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha ./test/",
    "pre-build": "react-scripts build",
    "react-dev-start": "cross-env BROWSER=none react-scripts start",
    "electron-dev-start": "cross-env NODE_ENV=development electron .",
    "dist-mac": "npm run pre-build && electron-builder --mac",
    "dist-win": "npm run pre-build && electron-builder --win --ia32",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "author": "ProofShow Inc.",
  "build": {
    "productName": "ProofShow Check",
    "appId": "show.proof.check",
    "extends": null,
    "files": [
      "resources/",
      "build/",
      "lib/",
      "locale/",
      "main.js",
      "package.json"
    ],
    "artifactName": "${productName} Installer-${version}.${ext}",
    "nsis": {
      "language": 1033,
      "perMachine": true,
      "runAfterFinish": false,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "resources/icon.icns",
      "target": [
        "pkg"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "electron": "^5.0.1",
    "electron-builder": "20.40.2",
    "mocha": "^6.1.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "find-process": "^1.4.1",
    "fs-extra": "^8.0.1",
    "node-fetch": "^2.6.0",
    "pcca-verifier": "^1.0.70510",
    "pdfjs-dist": "2.0.943",
    "pkijs": "^2.1.77",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.1",
    "snyk": "^1.192.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "snyk": true
}
